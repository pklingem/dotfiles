let os = substitute(system('uname'), "\n", "", "")
if os == "Darwin"
  set guifont=Monaco\ for\ Powerline:h12
elseif os == "Linux"
  set lines=45 columns=140
  set guifont=DejaVu\ Sans\ Mono\ for\ Powerline\ 12
  set guioptions-=m
  set guioptions-=T
  set guioptions-=l
  set guioptions-=r
  set guioptions-=b
  set guioptions-=L
  set guioptions-=R
endif

color solarized
set background=dark
